{
	"app-id":  "app.pianocheetah.pianocheetah",
	"command": "pianocheetah",
	"sdk":     "org.kde.Sdk",
	"runtime": "org.kde.Platform",
	"runtime-version": "6.6",
	"modules": [
		{
			"name": "bin_to_app",
			"buildsystem": "simple",
			"build-commands": [ 
				"cp -pr share /app" 
				"cp -pr bin   /app"
			],
			"sources": [
				{
					"type": "dir", 
					"path": "_build/files"
				}
			]
		}
	],
	"finish-args": [
		"--filesystem=home",
		"--share=ipc",
		"--share=network",
		"--socket=wayland",
		"--socket=fallback-x11",
		"--socket=pulseaudio"
	]
}
